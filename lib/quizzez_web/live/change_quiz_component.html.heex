<.form let={f} for={@changeset} phx-change="validate" phx-submit="save">
  <%= label f, :title %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= label f, :description %>
  <%= text_input f, :description %>
  <%= error_tag f, :description %>

  <div class="form-group">
    <%= inputs_for f, :questions, fn q -> %>
      <%= label q, :text %>
      <%= text_input q, :text %>
    <% end %>
  </div>


  <%= submit "Save" %>
</.form>
